<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/dark_gray_background</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_gray_background</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item> <!-- For light text on the status bar -->
    </style>
</resources>
