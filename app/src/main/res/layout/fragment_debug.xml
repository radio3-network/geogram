<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray_background">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/developer_options"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Tab Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black"
        android:padding="4dp">

        <!-- Log Tab -->
        <Button
            android:id="@+id/tab_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/log"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:stateListAnimator="@null" />

        <!-- Options Tab -->
        <Button
            android:id="@+id/tab_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/options"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Tab Content -->
    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Log Tab -->
        <LinearLayout
            android:id="@+id/log_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/black"
            android:visibility="visible">

            <!-- Log Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingBottom="8dp">

                <!-- Pause/Play Toggle Button -->
                <ImageButton
                    android:id="@+id/btn_pause_log"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/pause_log"
                    android:src="@drawable/ic_pause"
                    android:background="@android:color/transparent"
                    app:tint="@color/white"
                    android:layout_marginEnd="8dp" />

                <!-- Filter Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/white"
                        android:paddingEnd="4dp" />

                    <EditText
                        android:id="@+id/log_filter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Filter"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:inputType="text" />
                </LinearLayout>

                <!-- Clear Log Button -->
                <ImageButton
                    android:id="@+id/btn_clear_log"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/clear_log"
                    android:src="@drawable/ic_clear"
                    android:background="@android:color/transparent"
                    app:tint="@color/white"
                    android:layout_marginStart="8dp" />

                <!-- Copy to Clipboard Button -->
                <ImageButton
                    android:id="@+id/btn_copy_log"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/copy_to_clipboard"
                    android:src="@drawable/ic_copy"
                    app:tint="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Log Window -->
            <EditText
                android:id="@+id/lv_log"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="start|top"
                android:padding="8dp"
                android:inputType="none"
                android:textIsSelectable="true"
                android:textSize="10sp"
                android:scrollHorizontally="true"
                android:ellipsize="none"
                android:overScrollMode="always"
                android:scrollbars="vertical"
                android:maxLines="99999"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Options Tab -->
        <LinearLayout
            android:id="@+id/options_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/black"
            android:visibility="gone">

            <!-- Placeholder Content -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dev_options_button_warning"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="16dp" />

            <!-- Reset Settings Button -->
            <Button
                android:id="@+id/btn_reset_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_settings"
                android:backgroundTint="@color/material_dynamic_neutral40"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="start" />

            <!-- Shutdown App Button -->
            <Button
                android:id="@+id/btn_shutdown_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shutdown_app"
                android:backgroundTint="@color/material_dynamic_neutral40"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="start" />


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
