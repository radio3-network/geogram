<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Back Arrow -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Network Connections"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Bluetooth Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enables Bluetooth communication for device discovery and data exchange."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:id="@+id/switch_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Bluetooth"
            android:textColor="@color/white"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device ID"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device ID"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAC Address"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MAC Address"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <!-- Local Wi-Fi Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local Wi-Fi"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configures the Wi-Fi network settings for local communication."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:id="@+id/switch_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Local Wi-Fi"
            android:textColor="@color/white"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SSID"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SSID"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_wifi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Host IP Address"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_host_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host IP Address"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <!-- Human Messenger Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Human Messenger"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allows a human to carry messages physically between devices."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:id="@+id/switch_human_messenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Human Messenger"
            android:textColor="@color/white"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specify available storage for carrying messages (in GB)."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edit_storage_gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Storage Available (GB)"
            android:inputType="number"
            android:textColor="@color/white"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the expiry period for stored messages."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/spinner_expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/expiry_options"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
